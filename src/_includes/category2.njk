<section class="text-gray-600 body-font overflow-hidden">
  <div class="container px-5 py-12 mx-auto">
    <div class="-my-8 divide-y-2 divide-gray-100">
	{%- for post in posts %}
	{%- include 'post-card.njk' -%}
	{%- endfor -%}
    </div>

  {% if 1 == 2 %}
    {% if pagination.href.previous %}
      <span><a href="{{ pagination.href.previous | url }}">&lt;</a></span>
    {% endif %}

    {% if pagination.href.next %}
      <span><a href="{{ pagination.href.next | url }}">&gt;</a></span>
    {% endif %}

      <nav aria-labelledby="my-pagination">
        <h2 id="my-pagination">This is my Pagination</h2>
        <ol>
      {%- for pageEntry in pagination.pages %}
          <li><a href="{{ pagination.hrefs[ forloop.index0 ] | url }}"{% if page.url == pagination.hrefs[ forloop.index0 ] %} aria-current="page"{% endif %}>{% if page.url == pagination.hrefs[ forloop.index0 ] %} Current {% endif %} Page {{ forloop.index }}</a></li>
      {%- endfor %}
        </ol>
      </nav>
    {% endif %}




